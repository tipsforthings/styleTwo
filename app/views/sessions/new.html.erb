<% provide(:title, "Sign In") %>
<h2 class="three-em border-off center" style="font-weight: bold; ">Sign In</h2>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign In", class: "btn btn-lg btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign Up", signup_path %></p>
  </div>
</div>
